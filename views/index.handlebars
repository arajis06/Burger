{{!-- <div class="container"> --}}
    <div class="row main-row">
        <div class="col-md-7">
            <h1>Eat-Da-Burger!</h1>
        </div>
    </div>
{{!-- ADD A BURGER --}}
    <div class="row">
        <div class="col-md-7 addcol">
            <h4>Add A Burger</h4>
                <div class="form-group">
                    <form id="add-burger" action="api/burgers" method="POST">
                        <input type="text" id="burger-name" name="burger_name"></input>
                        <button class="btn-success" type="submit" id="add-burger">Add</button>
                    </form>
                </div>
        </div>
    </div>

{{!-- AVAIALBE BURGERS LEFTSIDE--}}
    <div class="row">
        <div class="col-md-3">
            <div class="avaiable-burgers text-center">
                <h2>Avaiable Burgers</h2>
                    <ul>
                        {{#each burgers}}
                            {{#unless this.devoured}}
                            <li>
                                <p>{{this.burger_name}}</p>

                                <form action="api/burgers/{{this.id}}?_method=PUT" method="POST">
                                    <button class="devored-btn btn-warning" type="submit">DEVOUR IT!</button>
                                </form>
                            </li>
                            {{/unless}}
                        {{/each}}
                    </ul>        
            </div>
        </div>
{{!-- DEVOURED BURGER --}} 
        <div class="col-md-3">
            <div class="devoured-burgers text-center">
                <h2>Devoured Burgers</h2>
                    <ul> 
                        {{#each burgers}}
                            {{#if this.devoured}}
                            <li>
                                <p>{{this.burger_name}}</p>
                            </li>
                            {{/if}}
                        {{/each}}
                    </ul>
            </div>
        </div>
    </div>

<br>

{{!-- </div> --}}

